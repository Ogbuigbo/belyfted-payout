{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",   // Add this
    "**/*.jsx", 
    "public/assets/icons/NairaIcon.jsx",
    "app/_partials/Hero.jsx",
    "app/dashboard/users/_components/User.jsx",
    "app/lib/Providers.js"
  ],
  "exclude": [
    "node_modules"
  ]
}
